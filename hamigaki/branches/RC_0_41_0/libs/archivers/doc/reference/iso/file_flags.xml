<header name="hamigaki/archivers/iso/file_flags.hpp">
  <namespace name="hamigaki">
    <namespace name="archivers">
      <namespace name="iso">
        <struct name="file_flags">
          <static-constant name="existence">
            <type>boost::uint8_t</type>
            <default>0x01</default>
            <purpose>隠しファイル</purpose>
          </static-constant>

          <static-constant name="directory">
            <type>boost::uint8_t</type>
            <default>0x02</default>
            <purpose>ディレクトリ</purpose>
          </static-constant>

          <static-constant name="associated">
            <type>boost::uint8_t</type>
            <default>0x04</default>
            <purpose>関連ファイル</purpose>
          </static-constant>

          <static-constant name="record">
            <type>boost::uint8_t</type>
            <default>0x08</default>
            <purpose>拡張属性レコードを持つ</purpose>
          </static-constant>

          <static-constant name="protection">
            <type>boost::uint8_t</type>
            <default>0x10</default>
            <purpose>保護ファイル</purpose>
          </static-constant>

          <static-constant name="multi_extent">
            <type>boost::uint8_t</type>
            <default>0x80</default>
            <purpose>複数エクステント</purpose>
          </static-constant>
        </struct>
      </namespace>
    </namespace>
  </namespace>
</header>
