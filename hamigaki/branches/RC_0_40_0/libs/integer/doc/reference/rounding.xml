<header name="hamigaki/integer/rounding.hpp">
  <namespace name="hamigaki">
    <function name="round_to_even">
      <template>
        <template-type-parameter name="T" />
      </template>
      <type>T</type>
      <parameter name="x">
        <paramtype>T</paramtype>
      </parameter>
      <returns><simpara><code>x</code>が偶数なら<code>x</code>、奇数なら<code>x+1</code></simpara></returns>
    </function>
    <function name="round_to_odd">
      <template>
        <template-type-parameter name="T" />
      </template>
      <type>T</type>
      <parameter name="x">
        <paramtype>T</paramtype>
      </parameter>
      <returns><simpara><code>x</code>が奇数なら<code>x</code>、偶数なら<code>x+1</code></simpara></returns>
    </function>
  </namespace>
</header>
